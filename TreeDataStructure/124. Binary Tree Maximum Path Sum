//124. Binary Tree Maximum Path Sum


class Solution {
public:
    int maxSum;

    int solve(TreeNode* root){
        if(root == NULL){
            return 0;
        }

        int l = solve(root->left);
        int r = solve(root->right);

        int neeche_he_mil_gya_answer = l + r + root->val;
        int koi_ek_accha = max(l,r) + root->val;
        int root_accha = root->val;

        maxSum = max({maxSum, koi_ek_accha, root_accha, neeche_he_mil_gya_answer});

        return max(koi_ek_accha, root_accha);
    } 

    int maxPathSum(TreeNode* root) {

        maxSum = INT_MIN;
        solve(root);
        return maxSum;
    }
};
