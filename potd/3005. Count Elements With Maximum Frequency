//3005. Count Elements With Maximum Frequency

class Solution {
public:
    int maxFrequencyElements(vector<int>& nums) {
        unordered_map<int,int> map;
        int frquency = 0;
        int count = 0;

        for(int i=0; i<nums.size(); i++){
            int num = nums[i];
            map[num]++;
        }

        for(auto& p : map){
            if(p.second == frquency){
                count++;
            }
            else if(p.second > frquency){
                frquency = p.second;
                count = 1;
            }
        }
        return count * frquency;
    }
};
