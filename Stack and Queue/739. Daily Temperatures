739. Daily Temperatures

Time Complexity: O(n)
Space Complexity: O(n)

class Solution {
public:
    vector<int> dailyTemperatures(vector<int>& temp) {
        
        int n = temp.size();
        vector<int> res(n,0);
        stack<int>st;
        
        for(int i=n-1; i >= 0; i--){

            while(!st.empty() && temp[st.top()] <= temp[i]){
                st.pop();
            }

            if(!st.empty()){
                res[i] = st.top() - i;
            }

            st.push(i);
        }
    return res;
    }
};




