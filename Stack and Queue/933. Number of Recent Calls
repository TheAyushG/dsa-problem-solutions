//leetcode 933. Number of Recent Calls

//using queue
class RecentCounter {
public:

    queue<int> q;

    RecentCounter() {
        
    }
    
    int ping(int t) {
        q.push(t);

        while(!q.empty() && t - 3000 > q.front()){
            q.pop();
        }


       return q.size();
    }
};


//sliding window, without queue

class RecentCounter {
public:

    vector<int> list;
    int i;
    int j;

    RecentCounter() {
        i = 0;
        j = -1;
    }
    
    int ping(int t) {
        list.push_back(t);
        j++;

        while(i < j && list[j] - 3000 > list[i]){
            i++;
        }


       return j - i + 1;
    }
};
