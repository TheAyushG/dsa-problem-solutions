//1019. Next Greater Node In Linked List

class Solution {
public:

    vector<int> nextLargerNodes(ListNode* head) {
        
        stack<int> st;
        vector<int> vec;
        ListNode* curr = head;

        while(curr){
            vec.push_back(curr->val);
            curr = curr->next;
        }

        int n = vec.size();
        
        for(int i = n-1; i >= 0; i--){
            while(!st.empty() && st.top() <= vec[i])
            st.pop();

            int temp = (st.empty() ? 0 : st.top());
            st.push(vec[i]);
            vec[i] = temp;
        }
        return vec;
    }
};
