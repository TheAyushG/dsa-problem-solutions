//394. Decode String

class Solution {
public:
    string decodeString(string s) {
        
        stack<int>numStack;
        stack<string> strStack;
        string curr = "";
        int num = 0;

        for(int i=0; i<s.size(); i++){
            char c = s[i];
            if(isdigit(c)){
                num = num * 10 + (c - '0');
            }

            else if(c == '['){
                numStack.push(num);
                strStack.push(curr);
                num = 0;
                curr = "";
            }

            else if(c == ']'){
                int repeat = numStack.top();
                numStack.pop();
                string temp = "";

                for(int j=0; j<repeat; j++){
                    temp += curr;
                }

                curr = strStack.top() + temp;
                strStack.pop();
            }

            else {
                curr += c;
            }
        }
        return curr;
    }
};
