//        [0, 1,  2,  3, 4, 5, 6, 7]
// nums = [1, 3, -1, -3, 5, 3, 6, 7]       k = 3

//239. Sliding Window Maximum (Hard Level)

class Solution {
public:
    vector<int> maxSlidingWindow(vector<int>& nums, int k) {
        
    int n = nums.size();

    deque<int> deq;
    vector<int> result;

    for(int i=0; i<n; i++){

        //step-1
        while(!deq.empty() && deq.front() <= i-k){
            deq.pop_front();
        }

        //step-2
        while(!deq.empty() && nums[i] > nums[deq.back()]){
            deq.pop_back();
        }

        //step-3
        deq.push_back(i);

        //step-4
        if(i >= k-1){
            result.push_back(nums[deq.front()]);
        }
    }
    return result;

    }
};


