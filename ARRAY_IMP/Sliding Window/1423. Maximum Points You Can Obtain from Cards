//1423. Maximum Points You Can Obtain from Cards

class Solution {
public:
    int maxScore(vector<int>& cardPoints, int k) {
        
        int n = cardPoints.size();
        
        int leftSum = 0;
        int rightSum = 0;

        if(n < k){
            return 0;
        }

        

        for(int i=0; i<k; i++)
            leftSum += cardPoints[i];

            if(n == k){
                return leftSum;
            }

        int maxSum = leftSum;

        int j = n-1;

        for(int i=k-1; i>=0; i--){
            leftSum -= cardPoints[i];
            rightSum += cardPoints[j];
            

            maxSum = max(maxSum, leftSum + rightSum);
        j--;
        }

        return maxSum;
    }
};
