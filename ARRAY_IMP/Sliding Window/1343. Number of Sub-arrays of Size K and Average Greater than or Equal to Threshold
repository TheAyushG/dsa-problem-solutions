//1343. Number of Sub-arrays of Size K and Average Greater than or Equal to Threshold

class Solution {
public:
    int numOfSubarrays(vector<int>& arr, int k, int threshold) {

        int n = arr.size();
        int k_sum = 0;
        int count = 0;

        for(int i = 0; i < k; i++){
            k_sum += arr[i];
        }

        if(k_sum / k >= threshold)
        count++;

        for(int i=k; i<n; i++){
            k_sum += arr[i];
            k_sum -= arr[i-k];

            if(k_sum / k >= threshold)
            count++;
        }
        
        return count;
    }
};
