//Approch-2 (Optimal Solution)

class Solution {
public:
    int longestSubarray(vector<int>& nums) {

    int n = nums.size();
    int start = 0;
    int zeroCount = 0;
    int maxLength = 0;

    for(int end=0; end<n; end++){
        if(nums[end] == 0)
        zeroCount++;

        while(zeroCount > 1){
            if(nums[start] == 0)
            zeroCount--;
        start++;
        }

    maxLength = max(maxLength, end-start);
    }

    return maxLength;

    }
};




//Approach-1 (Simple Brute Force) - T.C : O(n^2)
Time Limit Exceeded, this solution is not excepted by Leetcode but it is the brute force

class Solution {
public:
    int n;
    
    int findMax(vector<int>& nums, int skip_idx) {
        
        int currLength = 0;
        int maxLength  = 0;
        
        for(int i = 0; i<n; i++) {
            if(i == skip_idx)
                continue;
            
            if(nums[i] == 1) {
                currLength++;
                maxLength = max(maxLength, currLength);
            } else {
                currLength = 0;
            }
        }
        
        return maxLength;
        
    }
    
    int longestSubarray(vector<int>& nums) {
        n = nums.size();
        int result = 0;
        
        int countZero = 0;
        for(int i = 0; i<n; i++) {
            
            if(nums[i] == 0) {
                countZero++;
                result = max(result, findMax(nums, i));
            }
            
        }
        
        if(countZero == 0)
            return n-1;
        
        return result;
        
    }
};
