class Solution {
public:
    vector<int> sortedSquares(vector<int>& nums) {      
    
    int n = nums.size();
    int i = 0;
    int j = n-1;
    int index = n-1;

    vector<int>result(n);

    while(j >= i){
        int left = nums[i] * nums[i];
        int right = nums[j] * nums[j];

        if(left > right){
            result[index] = left;
            i++;
        }
        else{
            result[index] = right;
            j--;
        }
        index--;
    }
    return result;
    }
};


