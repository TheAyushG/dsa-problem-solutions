class Solution {
public:
        bool isVowel(char c){
            c = tolower(c);
            return c=='a' || c=='e' || c=='i' || c=='o' || c=='u' ||
                   c=='A' || c=='E' || c=='I' || c=='O' || c=='U';
        }
    string reverseVowels(string s) {
        int n = s.size();

        int i=0;
        int j=n-1;

        while(i<j){
            if(!isVowel(s[i])){
                i++;
            }
            else if(!isVowel(s[j])){
                j--;
            }

            else{
                swap(s[i], s[j]);
                i++;
                j--;
            }
        }
        return s;
    }
};






class Solution {
public:
    string reverseVowels(string s) {
        int n = s.size();

        string vowels = "aeiouAEIOU";

        int i=0;
        int j = n-1;

        while(i<j){
            if(vowels.find(s[i]) == string::npos){
                i++;
            }

            else if(vowels.find(s[j]) == string::npos){
                j--;
            }

            else{
                swap(s[i], s[j]);
                i++;
                j--;
            }
        }
        return s;
    }
};
