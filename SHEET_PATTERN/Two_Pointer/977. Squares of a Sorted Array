class Solution {
public:
    vector<int> sortedSquares(vector<int>& nums) {

        int n = nums.size();
        int i=0;
        int j=n-1;
        int index = n-1;

        vector<int> result(n);

        while(i <= j){
            int left = nums[i] * nums[i];
            int right = nums[j] * nums[j];

            if(left < right){
                result[index] = right;
                j--;
            }

            else{
                result[index] = left;
                i++;
            }
            index--;
        }
        return result;
    }
};



// same method as above

class Solution {
public:
    vector<int> sortedSquares(vector<int>& nums) {

        int k = nums.size();
        vector<int> negative;
        vector<int> positive;

        for(int i=0; i<k; i++){
            if(nums[i] < 0){
                negative.push_back(nums[i]);
            }
            else{
                positive.push_back(nums[i]);
            }
        }

        if(negative.size() == 0){ //no negative
            for(int i=0; i<positive.size(); i++)
            positive[i] = positive[i] * positive[i];
            return positive;
        }

        if(positive.size() == 0){ //no positive
            for(int i=0; i<negative.size(); i++)
            negative[i] = negative[i] * negative[i];
            reverse(negative.begin(), negative.end());
            return negative;
        }



        int i = 0;
        int j = 0;
        int id = 0;
        int n = negative.size();
        int m = positive.size();

        vector<int> result(n+m);

        for(int i=0; i<n; i++)
        negative[i] = negative[i] * negative[i];
        reverse(negative.begin(), negative.end());

        for(int i=0; i<m; i++)
        positive[i] = positive[i] * positive[i];

        while(i < n && j < m){
            if(negative[i] < positive[j]){
                result[id] = negative[i];
                i++;
                id++;
            }
            else{
                result[id] = positive[j];
                j++;
                id++;
            }
        }

        while(i<n){
            result[id] = negative[i];
            i++;
            id++;
        }

        while(j<m){
            result[id] = positive[j];
            j++;
            id++;
        }

        return result;
    }
};
