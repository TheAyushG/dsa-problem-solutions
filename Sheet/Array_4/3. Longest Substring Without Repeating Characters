--------------------------------------------
//Time Complexity: O(n)
//Space Complexity: O(256)
--------------------------------------------
class Solution {
public:
    int lengthOfLongestSubstring(string s) {

    int n = s.size();   
    int maxLength = 0;

    int hash[256];
        for(int i = 0; i < 256; i++){
            hash[i] = -1;
        }

    int i=0;
    int j=0;

    while(j<n){
        if(hash[s[j]] != -1){
            if(hash[s[j]] >= i){
                i = hash[s[j]] + 1;
            }
        }

        int len = j-i+1;
        maxLength = max(maxLength,len);
        hash[s[j]] = j;
        j++;
    }

    return maxLength;
    }
};

-------------------------------------------------------







-------------------------------------------------------
//Time Complexity: O(nÂ²)
//Space Complexity: O(256)
-------------------------------------------------------

class Solution {
public:
    int lengthOfLongestSubstring(string s) {

     int n = s.size();   
     int maxLength = 0;

     for(int i=0; i<n; i++){
       int freq[256] = {0};

       for(int j=i; j<n; j++){
        if(freq[s[j]] == 1)
           break;

        int len = j-i+1;
        maxLength = max(maxLength, len);
        freq[s[j]] = 1;
       }
     }

     return maxLength;
    }
};
