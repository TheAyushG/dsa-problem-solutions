class Solution {
  public:
    int getSecondLargest(vector<int> &arr) {
        // code here
        
        int n = arr.size();
        
        int largest = -1;
        int secondLargest = -1;
        
        for(int i=0; i<n; i++){
            if(arr[i] > largest){
                secondLargest = largest;
                largest = arr[i];
            }
            
            if(largest > arr[i] && secondLargest < arr[i]){
                secondLargest = arr[i];
            }
        }
        
        if(secondLargest == -1){
            return -1;
        }
        
        return secondLargest;
    }
};
