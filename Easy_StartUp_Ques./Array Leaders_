class Solution {
    // Function to find the leaders in the array.
  public:
    vector<int> leaders(vector<int>& arr) {
        // Code here
        
        int n = arr.size();
        
        int j = n-1;
        
        vector<int> result;
        
        int maxValue = INT_MIN;
        while(j >= 0){
            maxValue = max(maxValue, arr[j]);
            
            if(arr[j] >= maxValue){
            result.push_back(maxValue);
            }
            
            j--;
        }
        reverse(result.begin(), result.end());
        return result;
    }
};
