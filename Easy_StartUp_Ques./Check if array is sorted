class Solution {
  public:
    bool isSorted(vector<int>& arr) {
        // code here
        
        int n = arr.size();
        
        int i=1;
        while(i < n-1){
            if(arr[i] > arr[i-1]){
                i++;
        }
        
        else if(arr[i] == arr[i-1]){
            i++;
        }
        else{
            return false;
          }
        }
        return true;
    }
};
