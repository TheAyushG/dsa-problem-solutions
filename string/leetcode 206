leetcode 206 reverse string
time complexity o(n)
space complexity o(1)

class Solution {
public:
    ListNode* reverseList(ListNode* head) {

     if(head == NULL || head->next == NULL){
     return head;
     }

     ListNode* curr = head;
     ListNode* prev = NULL;

     while(curr != NULL){
          ListNode* next = curr->next;
          curr->next = prev;
          prev = curr;
          curr = next;

          head = prev;
      }
      return head;

    }
};



