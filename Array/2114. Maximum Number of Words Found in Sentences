class Solution {
public:
    int mostWordsFound(vector<string>& sentences) {
          
        int ans = 0;

        for(auto sentence : sentences){
            int curSpaces = 0;
            for(char ch : sentence){
                if(ch == ' ')
                curSpaces++;
            }
            ans = max(ans, curSpaces+1);
        } 
        return ans;
    }
};
